<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ItalianBrainrotClicker.Views.CharacterSelectionView"
             >
    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Button 
            ImageSource="ballerina_cappucina.jpg"
            WidthRequest="200"
            BackgroundColor="Transparent"
            Command="{Binding SelectBalerina}"
            Clicked="MoveToGameView"
        />
        <Button
            ImageSource="brr_brr_patapim.jpg"
            WidthRequest="200"
            BackgroundColor="Transparent"
            Command="{Binding SelectPatapim}"
            Clicked="MoveToGameView"
        />
        <Button
            ImageSource="tung_tung_tung_sahur.jpg"
            WidthRequest="200"
            BackgroundColor="Transparent"
            Command="{Binding SelectSahur}"
            Clicked="MoveToGameView"
        />
    </HorizontalStackLayout>
</ContentPage>