<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ItalianBrainrotClicker.Views.GameView"
             >
    <VerticalStackLayout HorizontalOptions="Center" Spacing="100">
        <Label
            x:Name="ClockLabel" 
            Text="60s"
            FontSize="21" 
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"
        />
        <Label
            x:Name="PointsLabel" 
            Text="0"
            FontSize="21" 
            FontAttributes="Bold"
            HorizontalTextAlignment="Center"
        />
        
        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Button 
                x:Name="MainButton"
                WidthRequest="200"
                BackgroundColor="Transparent"
                Clicked="MainButtonClicked"
            />
            <Label
                HorizontalTextAlignment="Center"
                x:Name="CharacterNameLabel"
            />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>